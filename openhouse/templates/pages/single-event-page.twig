{% extends 'layouts/base.twig' %}

{% block banner %}

<div class="banner banner-narrow banner-right" >
	<div class="banner-container" >
		<div class="banner-inner" >
			<div class="banner-content banner-content-middle" >
				<div class="building-banner-wrapper">
					<div class="container">
						<div class="section-wrapper">
							<div class="banner-text">
								<h1 class="building-title">{{ post.title }}</h1>
							</div> 
						</div>
					</div>
					<div class="slider">
						{% if post.images[0] %}
							{% for image in post.images %}
								<div class="slide-wrapper" {% if Image(image).src %}style="background-image: url('{{ Image(image).src('large') }}');"{% endif %}>
									{% if image.post_content %}
										<div class="image-credit">{{ image.post_content }}</div>
									{% elseif Image(image).caption %}
										<div class="image-credit">{{ Image(image).caption }}</div>
									{% endif %}
								</div>
							{% endfor%}
						{% else %}
							<div class="slide-wrapper"></div>
						{% endif %}
					</div>
					{% if post.image_credit %}
						<div class="image-credit">Image Credit: {{ post.image_credit }}</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block content %}
<!-- content -->
{% include 'partials/event.twig' %}
<!-- ./content -->
{% endblock %}
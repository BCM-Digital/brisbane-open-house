<div class="section section-sponsors">
	<div class="container">
		
		<div class="col-sm-offset-1 col-sm-10">
			<div class="row">
				{% for sponsor_category in content.sponsor_category %}
					{% if sponsor_category.column_width == '1/2' %}
						<div class="col-sm-6">
							{% set slug = sponsor_category.acf_fc_layout | replace({'_': "-"}) %}
							<div class="category-wrapper {{ slug }}">
								<div class="row">									
									<div class="col-md-6">
										{% for sponsor_type in sponsor_types %}
											{% if sponsor_type.slug == slug %}
												<h4>{{ sponsor_type.name }}</h4>
											{% endif %}
										{% endfor %}
									</div>
									<div class="col-md-6">
										<div class="row category-logos-wrapper">
										{% for sponsor in sponsors[slug] %}
											<div class="col-md-12 col-xs-12 category-logo-wrapper">
												{% if sponsor.website_url %}
													<a href="{{ sponsor.website_url }}" target="_blank"><img src="{{ Image(sponsor.thumbnail).src }}" alt="{{ Image(sponsor.thumbnail).alt }}"></a>
												{% else %}
													<img src="{{ Image(sponsor.thumbnail).src }}" alt="{{ Image(sponsor.thumbnail).alt }}">
												{% endif %}
											</div>
										{% endfor %}
										</div>
									</div>								
								</div>
							</div>								
						</div>
					{% elseif sponsor_category.column_width == '1/1'%}
						<div class="col-sm-12">
							{% set slug = sponsor_category.acf_fc_layout | replace({'_': "-"}) %}
							<div class="category-wrapper {{ slug }}">
								<div class="row">									
									<div class="col-md-3">
										{% for sponsor_type in sponsor_types %}
											{% if sponsor_type.slug == slug %}
												<h4>{{ sponsor_type.name }}</h4>
											{% endif %}
										{% endfor %}
									</div>
									<div class="col-md-9">
										<div class="row category-logos-wrapper">
										{% for sponsor in sponsors[slug] %}
											<div class="col-md-4 col-xs-12 category-logo-wrapper">
												{% if sponsor.website_url %}
													<a href="{{ sponsor.website_url }}" target="_blank"><img src="{{ Image(sponsor.thumbnail).src }}" alt="{{ Image(sponsor.thumbnail).alt }}"></a>
												{% else %}
													<img src="{{ Image(sponsor.thumbnail).src }}" alt="{{ Image(sponsor.thumbnail).alt }}">
												{% endif %}
											</div>
										{% endfor %}
										</div>
									</div>								
								</div>
							</div>
						</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>
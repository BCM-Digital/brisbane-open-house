{% extends 'layouts/base.twig' %}

{% block content %}
	{% if not user %}
		<div class="Unauthenticated-wrapper">
			<div class="Intro-container container">
				<div class="row">
					<div class="d-flex col-xs-12 text-center">
						<h1 class="title">{{ post.get_field('field_5cb0153be5884') }}</h1>
					</div>
					<div class="col-md-8 col-md-offset-2 col-xs-12 text-center">
						{{ post.get_field('field_5cb0154ee5885') }}
					</div>
				</div>
			</div>
			<div class="Login-container container">
				<div class="Form-row row">
					<div class="col col-sm-12 col-md-10 col-md-offset-1">
						{% if login_failed %}
							<p class="text-center">
								<alert class="alert alert-danger">
									Sorry, it seems like we cannot log you in with those credentials.
								</alert>
							</p>
						{% endif %}
					</div>
					<div class="col col-sm-12 col-md-4 col-md-offset-4">
						<div id="boh-login-form">
							{{ fn('wp_login_form', { redirect: '', remember: false, form_id: 'building_owner_login_form' }) }}
							<p class="toggler-wrapper">
								<a href="#" class="toggler" id="toggle-reset">Forgot password?</a>
							</p>
						</div>
						<div id="boh-reset-pass-form">
							{{ fn('do_shortcode', '[reset_password]' ) }}
							<p class="toggler-wrapper text-left">
								<a href="#" class="toggler" id="toggle-login">Login?</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% else %}
    	<div id="root"></div>
	{% endif %}

	{#<div id="root" class=""></div>#}
{% endblock %}
